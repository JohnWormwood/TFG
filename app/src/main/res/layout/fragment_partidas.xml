<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical"
    tools:context=".activities.fragments.PartidasFragment">


    <LinearLayout
        android:id="@+id/linearLayoutCaza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CAZA"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCazadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cazadores" />

            <SeekBar
                android:id="@+id/seekBarCazadores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonCaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonCazaOnClick"
            android:text="Iniciar partida de caza" />

        <TextView
            android:id="@+id/textViewPartidaCaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partida actual: No hay ninguna partida de caza en curso" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutAtaques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</LinearLayout>